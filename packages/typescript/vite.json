{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",
    "noEmit": true,
    "composite": false,
    "sourceMap": true,
    "inlineSources": false,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "preserveWatchOutput": true
  },
  "exclude": ["node_modules"]
}
