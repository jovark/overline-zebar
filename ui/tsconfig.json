{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist/types",
    "jsx": "react-jsx",          
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2019",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}

